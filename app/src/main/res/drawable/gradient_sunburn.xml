<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <stroke android:width="1dp" />
            <corners android:radius="5dip" />
            <gradient
                android:startColor="@color/progress_background_start"
                android:endColor="@color/progress_background_end"
                />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <stroke android:width="1dp" />
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="@color/progress_burn_start"
                    android:centerColor="@color/progress_burn_center"
                    android:endColor="@color/progress_burn_end"
                    />
            </shape>
        </clip>
    </item>

</layer-list>